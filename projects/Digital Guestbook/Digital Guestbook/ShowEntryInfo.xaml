<Window x:Class="Digital_Guestbook.ShowEntryInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vis info om besked" Height="300" Width="300">
    <Grid>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="115"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <Label Content="ID:"/>
                    <Label Content="Navn:"/>
                    <Label Content="Dato for oprettelse:"/>
                    <Label Content="Rating:"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <Label Content="{Binding ID}"/>
                    <Label Content="{Binding Name}"/>
                    <Label Content="{Binding DateTime}"/>
                    <Label Content="{Binding Rating}"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row ="1">
                <TextBox Text="{Binding Text, Mode=OneWay}" IsReadOnly="True"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
